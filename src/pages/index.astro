<!doctype html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>Document</title>
    </head>
    <body>
        <header>
            <img class="logo" src="/logoipsum-332.svg" />
            <button class="open">
                <img src="/burger-menu.svg" class="hamburger-icon" />
            </button>
            <nav class="nav">
                <button class="close">
                    <img src="/close.svg" class="close-icon" />
                </button>
                <ul class="nav__list">
                    <li class="li__1"><a href="#">Inicio</a></li>
                    <li class="li__2"><a href="/grid">Ejercicio 1</a></li>
                    <li class="li__3"><a href="/container">Ejercicio 3</a></li>
                    <li class="li__4"><a href="#">Contacto</a></li>
                </ul>
            </nav>
        </header>
    </body>
</html>
<style>
    * {
        box-sizing: border-box;
        margin: 0;
        padding: 0;
    }

    html {
        font-family: 'Roboto', sans-serif;
        font-size: 20px;
    }

    body {
        min-height: 100vh;
        line-height: 1.5;
        background-color: oklch(0.9506 0.0172 248.01);
    }

    img,
    svg {
        display: block;
        max-width: 100%;
    }

    button {
        font: inherit;
        background: transparent;
        border: none;
        cursor: pointer;
    }

    header {
        display: flex;
        align-items: center;
        justify-content: space-between;
        padding: 1rem;
    }

    .logo {
        width: 30%;
    }

    .hamburger-icon,
    .close-icon {
        width: 32px;
        height: 32px;
    }

    .open {
        position: relative;
    }

    .nav {
        position: absolute;
        top: 0;
        right: 0;
        bottom: 0;
        display: flex;
        flex-direction: column;
        align-items: flex-start;
        padding: 2rem;
        gap: 1rem;
        background-color: oklch(0.8751 0.0502 205.73);
        opacity: 0;
        visibility: hidden;
        transform: translateX(100%);
        transition:
            opacity 0.3s ease,
            transform 0.3s ease;
        pointer-events: none;
    }

    .nav.visible {
        opacity: 1;
        visibility: visible;
        transform: translateX(0);
        pointer-events: auto;
    }

    .nav__list {
        display: flex;
        flex-direction: column;
        gap: 1rem;
        list-style: none;
    }

    .nav__list li a {
        text-decoration: none;
        color: black;
    }

    .close {
        align-self: flex-start;
    }
    .nav__list li a:hover {
        background-color: oklch(0.75 0.0502 205.73);
    }

    @media (min-width: 768px) and (max-width: 1024px) {
        .nav {
            opacity: 1;
            bottom: auto;
            left: auto;
            visibility: visible;
            transform: none;
            flex-direction: row;
            pointer-events: auto;
            width: 100%;
            justify-content: flex-end;
        }
        .nav__list {
            display: grid;
            grid-template-columns: repeat(2, 1fr);
        }
        .hamburger-icon,
        .close-icon {
            opacity: 0;
            visibility: hidden;
        }
        .logo {
            width: 20%;
            position: absolute;
            z-index: 5;
            margin-top: 70px;
        }
        .li__4 {
            grid-row: 1;
            grid-column: 2;
        }
    }
    @media (min-width: 1025px) {
        .nav {
            opacity: 1;
            bottom: auto;
            left: auto;
            visibility: visible;
            transform: none;
            flex-direction: row;
            pointer-events: auto;
            width: 100%;
            justify-content: flex-end;
        }
        .nav__list {
            flex-direction: row;
            align-items: flex-end;
        }
        .hamburger-icon,
        .close-icon {
            opacity: 0;
            visibility: hidden;
        }
        .logo {
            width: 10%;
            position: absolute;
            z-index: 5;
            margin-top: 40px;
        }
        li:hover {
            transform: scale(1.1);
        }
    }
</style>
<script>
    const $nav = document.querySelector('.nav')
    const $open = document.querySelector('.open')
    const $close = document.querySelector('.close')

    $open?.addEventListener('click', () => {
        $nav?.classList.add('visible')
    })

    $close?.addEventListener('click', () => {
        $nav?.classList.remove('visible')
    })
</script>
