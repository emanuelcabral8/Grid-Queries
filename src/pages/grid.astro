<style>
    /* RESET de CSS */
    *,
    *::before,
    *::after {
        box-sizing: border-box;
        margin: 0px;
        padding: 0px;
    }

    html {
        font-size: 16px;
    }

    body {
        min-height: 100vh;
        line-height: 1.5;
    }

    img,
    picture,
    video,
    canvas,
    svg {
        display: block;
        width: 100%;
        height: 100%;
        object-fit: cover;
    }

    input,
    button,
    textarea,
    select {
        font: inherit;
    }
    .grid {
        display: grid;
        grid-template-columns: repeat(4, 1fr);
        gap: 5px;
        padding: 20px;
    }
    .grid__image4 {
        grid-column: 4;
        grid-row: 1/3;
    }
    .grid__image1 {
        grid-column: 1/3;
    }
    .grid__image5 {
        grid-column: 2/4;
    }
    .grid__image3 {
        grid-row: 3;
        grid-column: 2/4;
    }
    .grid__image8 {
        grid-column: 1/2;
        grid-row: 2;
    }
    h1 {
        text-align: center;
        font-size: 100px;
        font-family: 'Roboto';
        background: linear-gradient(
            to right,
            oklch(0.6147 0.2171 25.41),
            oklch(0.8882 0.1677 104.82)
        );
        color: white;
        text-shadow:
            -1px -1px 0 black,
            1px -1px 0 black,
            -1px 1px 0 black,
            1px 1px 0 black;
    }
</style>
