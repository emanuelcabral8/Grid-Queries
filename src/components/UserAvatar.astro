---
// Props
const { name, role, imageUrl, containerWidth } = Astro.props
// Hice mobile first, con el containerWidth probando con 150, 300 y 400 se pueden apreciar las diferencias en distintos tama√±os de contenedor
---

<style>
    *,
    *::before,
    *::after {
        box-sizing: border-box;
        margin: 2px;
        padding: 0;
    }

    html {
        font-size: 16px;
    }

    body {
        min-height: 100vh;
        line-height: 1.5;
    }

    img,
    picture,
    video,
    canvas,
    svg {
        display: block;
        max-width: 100%;
    }

    input,
    button,
    textarea,
    select {
        font: inherit;
    }
    .user {
        container-type: inline-size;
        display: grid;
        grid-template-columns: 2fr 1fr 1fr 1fr;
        grid-template-rows: repeat(2, 1fr);
        border: 2px solid black;
        gap: 0px;
    }
    .user-img {
        width: 500px;
        border-radius: 50%;
        border: 2px solid black;
        grid-row: 1/3;
    }
    h2 {
        grid-column: 2;
        grid-row: 2;
        margin-left: 5px;
    }
    h1 {
        margin-top: 20px;
    }
    button {
        grid-column: 4;
        grid-row: 2;
        width: 75%;
        height: 50%;
    }
    section {
        container-type: inline-size;
        container-name: my-grid;
    }
    @container (max-width: 300px) {
        button {
            visibility: hidden;
            opacity: 0;
        }
        h2 {
            visibility: hidden;
            opacity: 0;
        }
        h1 {
            padding-left: 20px;
        }
        .user-img {
            margin-top: 10px;
    }
}
    @container (max-width: 150px) {
        button {
            visibility: hidden;
            opacity: 0;
        }
        h2 {
            visibility: hidden;
            opacity: 0;
        }
        h1 {
            visibility: hidden;
            opacity: 0;
        }
        .user-img {
            grid-column: 1/3;
            margin-left: 20px;
            margin-top: 20px;
        }
    }
</style>

<div class="user" style={`width: ${containerWidth}px;`}>
    <img class="user-img" src={imageUrl} />
    <h1>{name}</h1>
    <h2>{role}</h2>
    <button>Perfil</button>
</div>
